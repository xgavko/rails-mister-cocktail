<div class="wrapper">
  <div class="banner">
    <div class="banner-content">
      <h1 style ="text-shadow: 4px 4px 15px grey;">Mister Cocktail</h1>
      <p>All the cocktails</p>
      <%=  link_to "Add new", new_cocktail_path, class:"btn btn-danger"%>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <%= link_to cocktail_path(cocktail) do%>
    <div class="col-xs-6 col-sm-3">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
         url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
        <div class="card-category">Cocktail category</div>
        <div class="card-description">
          <h2>
            <%=  cocktail.name%>
            </h2>
          <p>Cocktail description</p>
        </div>
      </div>
    </div>
    <% end %>
  <% end %>
  </div>
</div>

